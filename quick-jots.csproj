<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <RootNamespace>quick-jots</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <UseWindowsForms>true</UseWindowsForms>
		<ApplicationIcon>assets/logos/logo.ico</ApplicationIcon>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Raylib-cs" Version="4.2.0.1" />
    <PackageReference Include="TextCopy" Version="6.2.0" />
    <Reference Include="jh-lib"> <HintPath>assets/lib/jh-lib.dll</HintPath> </Reference>
  </ItemGroup>

</Project>
